{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "options": {
                "cwd": "test"
            },
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "options": {
                "cwd": "app"
            },
            "command": "dotnet",
            "type": "shell",
