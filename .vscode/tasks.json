            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "options": {
                "cwd": "app"
            },
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "$TELEGRAM_TOKEN",
                "$TELEGRAM_USER_ID"
            ],
            "problemMatcher": []
        }
